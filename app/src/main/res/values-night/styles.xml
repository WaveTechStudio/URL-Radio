<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Set AppCompatâ€™s colors -->
        <item name="colorPrimary">@color/urlradio_grey_very_light</item>
        <item name="colorPrimaryDark">@color/urlradio_white</item>
        <item name="colorAccent">@color/urlradio_red_dark</item>

        <!-- Don't show white status bar -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/status_bar_background</item>

        <!-- Set navigation bar color -->
        <item name="android:navigationBarColor">@color/player_sheet_background</item>

        <!-- Default window background used for resizing on v24 -->
        <item name="android:windowBackgroundFallback">@color/urlradio_black</item>
    </style>

</resources>