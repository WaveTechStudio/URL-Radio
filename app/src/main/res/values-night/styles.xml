<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Set AppCompatâ€™s colors -->
        <item name="colorPrimary">@color/urlradio_grey_very_light</item>
        <item name="colorPrimaryDark">@color/urlradio_white</item>
        <item name="colorAccent">@color/urlradio_red_dark</item>

        <!-- Don't show white status bar -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/status_bar_background</item>

        <!-- Set navigation bar color -->
        <item name="android:navigationBarColor">@color/player_sheet_background</item>

        <!-- Default window background used for resizing on v24 -->
        <item name="android:windowBackgroundFallback">@color/urlradio_black</item>

        <!-- Custom Font -->
        <item name="android:textViewStyle">@style/SansTextViewStyle</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="SansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textColor">@color/urlradio_white</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textColor">@color/urlradio_red_dark</item>
    </style>

</resources>