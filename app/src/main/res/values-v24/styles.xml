<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="URLRadioAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Set AppCompatâ€™s colors -->
        <item name="colorPrimary">@color/urlradio_grey_dark</item>
        <item name="colorPrimaryDark">@color/urlradio_grey_darker</item>
        <item name="colorAccent">@color/urlradio_red</item>

        <!-- List divider -->
        <item name="android:listDivider">@drawable/list_divider</item>

        <!-- Set white status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/status_bar_background</item>

        <!-- Set navigation bar color -->
        <item name="android:navigationBarColor">@color/navigation_bar_background</item>

        <!-- Set snack bar style -->
        <item name="snackbarStyle">@style/LightSnackBarStyle</item>

        <!-- Default window background used for resizing on v24) -->
        <item name="android:windowBackgroundFallback">@color/urlradio_grey_darker</item>

    </style>

    <!-- Snack bar color -->
    <style name="LightSnackBarStyle" parent="Widget.Design.Snackbar">
        <item name="android:background">@color/snack_bar_background</item>
    </style>

</resources>
