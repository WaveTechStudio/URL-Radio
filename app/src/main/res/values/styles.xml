<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Set AppCompatâ€™s colors -->
        <item name="colorPrimary">@color/urlradio_grey_dark</item>
        <item name="colorPrimaryDark">@color/urlradio_grey_darker</item>
        <item name="colorAccent">@color/urlradio_red</item>

        <!-- Show white status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/status_bar_background</item>

        <!-- Set navigation bar color -->
        <item name="android:navigationBarColor">@color/player_sheet_background</item>

        <!-- Default window background used for resizing on v24) -->
        <item name="android:windowBackgroundFallback">@color/urlradio_grey_darker</item>

        <!-- Custom Font -->
        <item name="android:textViewStyle">@style/SansTextViewStyle</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>

    </style>

    <style name="SansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textColor">@color/icon_default</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textColor">@color/urlradio_red</item>
        <item name="rippleColor">@color/urlradio_red_ripple</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>
