<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Set AppCompatâ€™s colors -->
        <item name="colorPrimary">@color/urlradio_grey_dark</item>
        <item name="colorPrimaryDark">@color/urlradio_grey_darker</item>
        <item name="colorAccent">@color/urlradio_blue</item>

        <!-- Show white status bar -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/status_bar_background</item>

        <!-- Set navigation bar color -->
        <item name="android:navigationBarColor">@color/player_sheet_background</item>

        <!-- Default window background used for resizing on v24) -->
        <item name="android:windowBackgroundFallback">@color/urlradio_grey_darker</item>

        <!-- Colors used by playback seek bar -->
        <!-- <item name="android:colorControlActivated"></item> -->
        <!-- <item name="android:colorControlNormal"></item> -->
    </style>

    <style name="RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>